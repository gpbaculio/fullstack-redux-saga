  "dependencies": {
    "concurrently": "^4.0.1"
  },
  "scripts": {
    "dev": "concurrently --kill-others \"npm run backend\" \"npm run frontend\"",
    "start": "cd backend && npm start",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
